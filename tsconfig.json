{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": true,
		"module": "esnext",
		"moduleResolution": "node",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"jsx": "preserve",
		"sourceMap": true,
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/src/*": ["./src/*"],
			"@/public/*": ["./public/*"]
		}
	},
	"include": ["src/**/*", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "build", ".vscode", ".yarn"]
}
